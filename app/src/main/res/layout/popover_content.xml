<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popover_bg"
    android:padding="16dp"
    android:elevation="12dp"
    android:minWidth="200dp"
    android:maxWidth="300dp">

    <!-- Title/Name -->
    <TextView
        android:id="@+id/popoverTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Content lines -->
    <TextView
        android:id="@+id/popoverContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:lineSpacingExtra="2dp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- View source link (for threat annotations with citations) -->
    <TextView
        android:id="@+id/popoverViewSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_source"
        android:textSize="13sp"
        android:textColor="#7EC8E3"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Status line (smaller, italics, at bottom) -->
    <TextView
        android:id="@+id/popoverStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout> 