<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Settings"
        android:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@android:drawable/ic_menu_revert" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:divider="@android:color/transparent"
            android:showDividers="middle">

            <!-- Add Connection & Network section header and merged card -->
            <!-- New Section Header: Connection & Network -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_connection_network"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Merged Card: Mesh Network Adapter + Background Processing (combine original first two cards) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Original Mesh Network Adapter content -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mesh_network_adapter"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/meshNetworkTypeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_mesh_network_adapter"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/meshNetworkTypeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:importantForAccessibility="yes"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bluetoothConnectButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/connect_bluetooth"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/aidlConnectButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/connect"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/unlockAppButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/unlock_app_features"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        style="@style/Widget.MaterialComponents.Button" />

                    <TextView
                        android:id="@+id/bluetoothStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/not_connected"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/aidlStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/not_connected"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/configProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        style="?android:attr/progressBarStyle" />

                    <TextView
                        android:id="@+id/configProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/downloading_config" />

                    <!-- Divider between sections in merged card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Original Background Processing content -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/background_processing"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/backgroundProcessingSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_background_processing" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Map & Display section header and merged general map settings card -->
            <!-- New Section Header: Map & Display -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_map_display"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Merged Card: General Map Settings (combine map settings, keep awake, packet summary, min segment, peer staleness) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/map_settings"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <!-- Original map mode spinner -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Startup Map Mode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/mapModeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:importantForAccessibility="yes"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Original dark mode spinner -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Map Dark Mode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/darkModeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:importantForAccessibility="yes"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Original peer staleness input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Peer Staleness Threshold (minutes)"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/peerStalenessThresholdEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="e.g. 10 (peers older than this will show as gray)" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Original keep screen awake -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_screen_awake"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/keepScreenAwakeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prevent_screen_sleep"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Original min line segment dist -->
                    <TextView
                        android:id="@+id/minLineSegmentDistLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min_line_segment_dist"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/minLineSegmentDistLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/min_line_segment_dist_hint_imperial"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/minLineSegmentDistEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="e.g. 1.0" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Original Card: Location Prediction -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_prediction"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/showPredictionOverlaySwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/show_predicted_location" />

                    <TextView
                        android:id="@+id/predictionAdvancedLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/advanced"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="-4dp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Original Card: Coverage Analysis -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coverage_analysis"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/includePeersInCoverageSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/include_peers_in_coverage"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_of_detail"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/coverageDetailLevelGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/coverageDetailLow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/low_detail"
                            android:layout_marginBottom="4dp" />

                        <RadioButton
                            android:id="@+id/coverageDetailMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medium_detail"
                            android:layout_marginBottom="4dp" />

                        <RadioButton
                            android:id="@+id/coverageDetailHigh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/high_detail" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/antenna_heights"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/userAntennaHeightLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_antenna_height_imperial"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:helperText="Height of your transmitting antenna above ground level">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userAntennaHeightEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/receivingAntennaHeightLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/receiving_antenna_height_imperial"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundMode="outline"
                        app:helperText="Height of receiving radio antenna above ground level">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/receivingAntennaHeightEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Original Card: Weather Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weatherSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_settings"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/weatherEnabledSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_weather_layer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_source"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select weather data type"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/weatherSourceSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:importantForAccessibility="yes"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opacity"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/weatherOpacitySlider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="0.5"
                            android:valueTo="1.0"
                            android:stepSize="0.1"
                            app:labelBehavior="floating" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/weatherOpacityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.9"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Audio & Feedback section header and original End Transmission Beep card -->
            <!-- New Section Header: Audio & Feedback -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_audio_feedback"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_transmission_beep"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/endBeepSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_double_beep"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Device & Calibration section header and original Compass Calibration card -->
            <!-- New Section Header: Device & Calibration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_device_calibration"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/compass_calibration_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/compassStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/status_checking"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/compassQualityText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quality_unknown"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/compassCalibrateButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/compass_calibration_button"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Localization & Personalization section header and original Localization Settings card -->
            <!-- New Section Header: Localization & Personalization -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_localization_personalization"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/localization_settings"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <!-- Language Settings -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/app_language"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/languageSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:importantForAccessibility="yes"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Unit System Settings -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/unit_system"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/unitSystemSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:importantForAccessibility="yes"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Advanced/Testing section header and original Simulate Peers card -->
            <!-- New Section Header: Advanced/Testing -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_advanced_testing"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Moved: show_packet_summary -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_packet_summary"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/showPacketSummarySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_packet_overlay"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Original simulate peers content -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/simulate_peers"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/simulatePeersSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_simulated_peers" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/simulatedPeersCountLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of Simulated Peers"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="outline">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/simulatedPeersCountEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="1-10"
                            android:maxLength="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/simulatedPeersCentralTendencyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/central_tendency_distance_imperial"
                        android:layout_marginTop="8dp"
                        app:boxBackgroundMode="outline">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/simulatedPeersCentralTendencyEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="0.1-10.0"
                            android:maxLength="4" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/peers_tend_to_appear"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 