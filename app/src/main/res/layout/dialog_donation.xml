<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/support_tak_lite"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/support_description"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- GitHub Sponsors -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/github_sponsors"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <Button
            android:id="@+id/githubSponsorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/support_via_github"
            android:backgroundTint="@color/primary_light"
            android:textColor="@color/white" />

        <!-- Cryptocurrency Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/cryptocurrency_click_copy"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <Button
            android:id="@+id/bitcoinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/bitcoin_btc"
            android:backgroundTint="@color/primary_light"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/ethereumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/ethereum_eth"
            android:backgroundTint="@color/primary_light"
            android:textColor="@color/white" />

        <!-- Manual Activation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/after_donating_click"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <Button
            android:id="@+id/manualActivationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/activate_premium_features"
            android:backgroundTint="@color/primary_light"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/privacy_note"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/listDivider" />

        <!-- Back to Purchase Options -->
        <Button
            android:id="@+id/backToPurchaseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_to_purchase_options"
            android:textSize="14sp"
            android:backgroundTint="@color/primary_light"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView> 