<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Support TAK Lite Development"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Map APIs cost money to keep running. Your support helps ensure the ongoing development of this app. Choose your preferred donation method:"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- GitHub Sponsors -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="GitHub Sponsors"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <Button
            android:id="@+id/githubSponsorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Support via GitHub Sponsors"
            android:backgroundTint="@color/interactive_color_light"
            android:textColor="@android:color/white" />

        <!-- Cryptocurrency Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Cryptocurrency (Click to copy address)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <Button
            android:id="@+id/bitcoinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Bitcoin (BTC)"
            android:backgroundTint="@color/interactive_color_light"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/ethereumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Ethereum (ETH)"
            android:backgroundTint="@color/interactive_color_light"
            android:textColor="@android:color/white" />



        <!-- Manual Activation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="After donating, click below to activate premium features:"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <Button
            android:id="@+id/manualActivationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Activate Premium Features"
            android:backgroundTint="@color/interactive_color_light"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Note: This app respects your privacy and doesn't require Google Play Services to function. All donation methods are privacy-focused and avoid traditional payment processors."
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>
</ScrollView> 